<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="28dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="PuzzleGame"
                android:textColor="@color/black"
                android:textSize="42sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="212dp"
                android:layout_height="8dp"
                android:src="@drawable/lineasup" />


        </LinearLayout>

        <ScrollView
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:ignore="RtlSymmetry">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingRight="16dp"
                android:paddingLeft="16dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Imagen referencial"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:paddingTop="8dp"/>
                <ImageView
                    android:id="@+id/ivSelectedImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/image_border"
                    android:scaleType="centerCrop" />


                <Button
                    android:id="@+id/btnSelectImage"
                    android:layout_width="200dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@drawable/button_background_black"
                    android:layout_gravity="center"
                    android:text="Escoger imagen"
                    app:cornerRadius="8dp" />


                <Button
                    android:id="@+id/btnGuardarPublicacion"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@drawable/button_background_green"
                    android:insetTop="8dp"
                    android:text="Comenzar"
                    android:layout_marginBottom="12dp"
                    app:cornerRadius="8dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</LinearLayout>
